    .main aside
  background dkgrey

.title
  color white

nav a:hover,
    nav a:visited
  color white

.home
  .main
    padding 0 0 0 0

.main
  padding 30px 0
  article
    h1
      font-size 2em
  aside
    color white
    padding 0px 5% 10px

.footer-container
  footer
    color white
  a
    color white
    text-decoration none
    


.ie7
  .title
    padding-top 20px

.ir
  background-color transparent
  border 0
  overflow hidden
  *text-indent -9999px
  &:before
    content ""
    display block
    width 0
    height 150%

.hidden
  display none !important
  visibility hidden

.visuallyhidden
  border 0
  clip rect(0 0 0 0)
  height 1px
  margin -1px
  overflow hidden
  padding 0
  position absolute
  width 1px

.visuallyhidden.focusable:active,
.visuallyhidden.focusable:focus
  clip auto
  height auto
  margin 0
  overflow visible
  position static
  width auto

.invisible
  visibility hidden

.clearfix:before,
.clearfix:after
  content " "
  display table

.clearfix
  *zoom 1
  &:after
    clear both

.right
  float right


@media only screen and (min-width: 480px)
  nav
    a
      float left
      width 18%
      margin 0 1.7%
      padding 25px 2%
      margin-bottom 0
      text-decoration none
    li
      &:first-child
        a
          margin-left 0
      &:last-child
        a
          margin-right 0
    ul
      li
        display inline

  .oldie
    nav
      a
        margin 0 0.7%

  

@media only screen and (min-width: 760px) 
  html
    background dkgrey

  section
    display none
    &:target
      display block

  .top
    display none

  .line
    position: fixed
    width 100%
    background dkgrey
    top 0
    left 0
    height 72px

  #home
    margin-top 0px

  .line
    position: fixed
    width: 100%
    background dkgrey
    top 0
    left 0
  .header-container
    border-bottom: 5px solid ltgrey
    height 1000px
    background url('../images/home.jpg') top center no-repeat
    text-align right
  
  
  body
    padding-bottom 75px
  
  .footer-container
    position absolute
    width 100%
    bottom 0
    line-height 1em
    position fixed

  
  .vcard
    display inline
    box-sizing border-box
    width 300px
    height 200px
    border-radius 6px
    background firstColor
    box-shadow 1px 2px 5px  rgba(0,0,0,.50), inset 0 0 20px rgba(0,0,0,.25)
    -webkit-transform rotate(-10deg)
    -moz-transform rotate(-10deg)
    transform rotate(-10deg)
    line-height 1.5em
    font-family fontOpenSans
    float right
    position absolute
    right 25px
    bottom 100px
    span
      font-weight bold
    a
      font-family  fontTitillium
      text-decoration none
      color dkgrey
      font-size 24px
      line-height 1.5em

  .vcard-top
    height 65px
    padding-top 5px
    color #fff
    text-transform uppercase
    text-align center
    line-height 0.2em
    font-weight 500

  .vcard-top, .vcard-top h1
    font-family fontArchivoBlack

  .fn
    background #fff
    height 120px
    text-align center
    padding-top 5px

  .header-container,
      .main aside
    border-bottom: 5px solid ltgrey

  .title
    float left

  nav
    float right
    width 65%
    li
      a
        transition all 0.4s ease-in-out



@media only screen and (min-width: 1140px)
  .wrapper
    width 1026px
    margin 0 auto

@media print
  *
    background transparent !important
    color #000 !important
    box-shadow none !important
    text-shadow none !important

  a,
      a:visited
    text-decoration underline

  a[href]:after
    content " (" attr(href) ")"

  abbr[title]:after
    content " (" attr(title) ")"

  .ir a:after,
       a[href^="javascript:"]:after,
       a[href^="#"]:after
    content ""

  pre,
      blockquote
    border 1px solid #999
    page-break-inside avoid

  thead
    display table-header-group

  tr,
      img
    page-break-inside avoid

  img
    max-width 100% !important

  @page
    margin 0.5cm

  p,
      h2,
      h3
    orphans 3
    widows 3

  h2,
      h3
    page-break-after avoid




  

